<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
  <persistence-unit name="kakebo" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.example.kakebo.entity.Categoria</class>
    <class>com.example.kakebo.entity.Ingreso</class>
    <class>com.example.kakebo.entity.LogDiario</class>
    <properties>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
      <property name="javax.persistence.jdbc.password" value="psql" />
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/kakebo" />
      <property name="javax.persistence.jdbc.user" value="postgres" />
      <property name="eclipselink.logging.level" value="ALL" />
      <property name="eclipselink.ddl-generation" value="drop-and-create-tables" />
    </properties>
  </persistence-unit>
</persistence>